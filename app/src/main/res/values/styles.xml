<resources
    xmlns:tools="http://schemas.android.com/tools" >

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/LightRedActionBar</item>
    </style>

    <style name="LightRedActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/LightRedActionBarTextStyle</item>
        <item name="android:background"  tools:ignore="NewApi">@color/primaryColor</item>
        <item name="background">@color/primaryColor</item>
    </style>

    <style name="LightRedActionBarTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
