<resources
    xmlns:tools="http://schemas.android.com/tools" >

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorHint">@color/half_opacity_gray</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="icon">@color/icons</item>
        <item name="dialogTheme">@style/DialogTheme</item>
    </style>

    <style name="DialogActivity" parent="AppTheme" >
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light" >
        <item name="android:textColor">@android:color/white</item>
        <item name="android:divider">@color/primary_dark</item>
        <item name="android:windowBackground">@color/primary_dark</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="FabFrameTitleText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/dialog_title_text_size</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_margin">@dimen/dialog_view_vertical_margin</item>
    </style>

    <style name="FabFrameBodyText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">@dimen/dialog_view_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/dialog_view_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/dialog_view_vertical_margin</item>
        <item name="android:textSize">@dimen/dialog_body_text_size</item>
    </style>

    <style name="FabFrameButtonStyle" parent="@android:style/Widget.Material.Button.Borderless" >
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
    </style>

</resources>
