<resources
    xmlns:tools="http://schemas.android.com/tools" >

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary" tools:ignore="NewApi">@color/primary</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark" tools:ignore="NewApi">@color/primary_dark</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent" tools:ignore="NewApi">@color/accent</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorHint">@color/secondary_text</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:icon">@color/icons</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:dialogTheme">@style/DialogTheme</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/scale_in</item>
        <item name="android:windowExitAnimation">@anim/scale_out</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:divider">@color/primary_dark</item>
        <item name="android:windowBackground">@color/primary_dark</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="DialogTitleText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/dialog_title_text_size</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_margin">@dimen/dialog_view_vertical_margin</item>
    </style>

    <style name="DialogBodyText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">@dimen/dialog_view_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/dialog_view_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/dialog_view_vertical_margin</item>
        <item name="android:textSize">@dimen/dialog_body_text_size</item>
    </style>

    <style name="DialogButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless" >
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
    </style>

</resources>
