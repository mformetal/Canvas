<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_home_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:id="@+id/activity_home_fragment_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="RtlSymmetry" >

        <miles.canvas.ui.widget.LoadingAnimator
            android:id="@+id/activity_home_loading_animator"
            android:layout_gravity="center"
            android:layout_width="@dimen/view_save_animation_dimens"
            android:layout_height="@dimen/view_save_animation_dimens" />

    </FrameLayout>
    
    <android.support.design.widget.NavigationView
        android:id="@+id/activity_home_navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:layout_gravity="start"
        android:theme="@style/Canvas"
        android:background="@color/accent"
        app:itemTextColor="@color/primary_light"
        app:itemIconTint="@color/primary_light"
        app:headerLayout="@layout/activity_home_header_layout"
        app:menu="@menu/activity_home_navigation_menu" />

</android.support.v4.widget.DrawerLayout>