<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <miles.canvas.view.ViewAspectRatioImage
        android:id="@+id/adapter_gallery_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        app:aspectRatioEnabled="false"
        app:aspectRatio="@dimen/aspect_ratio" />

    <miles.canvas.view.ViewTypefaceTextView
        android:id="@+id/adapter_gallery_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="bottom|center_horizontal"
        android:textColor="@android:color/black"
        android:textSize="@dimen/xlarge_text_size"
        android:layout_margin="@dimen/activity_vertical_margin"
        tools:text="SHIT" />

</FrameLayout>