<?xml version="1.0" encoding="utf-8"?>
<milespeele.canvas.view.ViewBrushPickerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <milespeele.canvas.view.ViewBrushPickerPaintExampleWidth
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        android:id="@+id/fragment_brush_picker_view_example" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_vertical_margin"
        android:id="@+id/fragment_brush_picker_view_sizer" />

    <milespeele.canvas.view.ViewBrushPickerPaintExampleLayout
        layout="@layout/paint_example_layout"
        app:paintType="@string/paint_example_dashed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <milespeele.canvas.view.ViewBrushPickerPaintExampleLayout
        layout="@layout/paint_example_layout"
        app:paintType="@string/paint_example_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</milespeele.canvas.view.ViewBrushPickerLayout>