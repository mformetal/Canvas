<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_gallery_root"
    android:fitsSystemWindows="true" >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_gallery_masterpieces"
        android:clipToPadding="false"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Toolbar
        android:id="@+id/activity_gallery_toolbar"
        android:title="Your Masterpieces"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="@android:style/ThemeOverlay.Material.Dark.ActionBar"
        android:background="?android:colorPrimary"
        android:elevation="@dimen/fab_elevation"
        android:titleTextAppearance="@android:style/TextAppearance.Material.Widget.ActionBar.Title" />

    <ProgressBar
        android:id="@+id/activity_gallery_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:indeterminateTint="@color/icons"
        android:indeterminateTintMode="src_in" />

</FrameLayout>