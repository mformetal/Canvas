<?xml version="1.0" encoding="utf-8"?>
<miles.canvas.ui.widget.CanvasLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_drawer_coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false" >

    <miles.canvas.ui.widget.CanvasSurface
        android:id="@+id/fragment_drawer_canvas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_anchorGravity="top"
        app:layout_anchor="@id/fragment_drawer_coordinator" />

    <miles.canvas.ui.widget.RoundedFrameLayout
        android:id="@+id/fragment_drawer_animator"
        android:elevation="24dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:layout_anchorGravity="center"
        app:layout_anchor="@id/fragment_drawer_coordinator" />

    <include
        layout="@layout/fragment_drawer_fab_menu"
        android:id="@+id/fragment_drawer_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:visibility="gone"
        app:layout_behavior="miles.canvas.ui.widget.FabMenuBehavior"
        app:layout_anchorGravity="bottom|center_horizontal"
        app:layout_anchor="@id/fragment_drawer_coordinator" />

    <include
        layout="@layout/fragment_drawer_text_bitmap"
        android:visibility="gone"
        android:id="@+id/fragment_drawer_text_bitmap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        app:layout_behavior="miles.canvas.ui.widget.FabMenuBehavior"
        app:layout_anchorGravity="bottom|center_horizontal"
        app:layout_anchor="@id/fragment_drawer_coordinator" />

</miles.canvas.ui.widget.CanvasLayout>