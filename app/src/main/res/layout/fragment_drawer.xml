<?xml version="1.0" encoding="utf-8"?>
<milespeele.canvas.view.ViewCanvasLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_drawer_coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <milespeele.canvas.view.ViewCanvasSurface
        android:id="@+id/fragment_drawer_canvas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_anchorGravity="top"
        app:layout_anchor="@id/fragment_drawer_coordinator" />

    <milespeele.canvas.view.ViewRoundedFrameLayout
        android:id="@+id/fragment_drawer_animator"
        android:elevation="24dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:layout_anchorGravity="center"
        app:layout_anchor="@id/fragment_drawer_coordinator" />

    <include
        layout="@layout/view_save_animator"
        android:id="@+id/fragment_drawer_save_animation"
        android:layout_gravity="center"
        android:layout_width="@dimen/view_save_animation_dimens"
        android:layout_height="@dimen/view_save_animation_dimens"
        android:visibility="gone"
        app:layout_anchorGravity="center"
        app:layout_anchor="@id/fragment_drawer_coordinator" />

    <include
        layout="@layout/fragment_drawer_menu"
        android:id="@+id/fragment_drawer_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        app:layout_behavior="milespeele.canvas.view.ViewMenuBehavior"
        app:layout_anchorGravity="bottom|center_horizontal"
        app:layout_anchor="@id/fragment_drawer_coordinator" />

    <include
        layout="@layout/fragment_drawer_options_menu"
        android:visibility="gone"
        android:id="@+id/fragment_drawer_options_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        app:layout_behavior="milespeele.canvas.view.ViewMenuBehavior"
        app:layout_anchorGravity="bottom|center_horizontal"
        app:layout_anchor="@id/fragment_drawer_coordinator" />

</milespeele.canvas.view.ViewCanvasLayout>