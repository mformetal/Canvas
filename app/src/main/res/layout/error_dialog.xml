<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/error_dialog_title"
        style="@style/DialogTitleText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/error_dialog_title"
        android:id="@+id/error_dialog_body"
        style="@style/DialogBodyText" />

    <Button
        android:id="@+id/error_dialog_pos_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/error_dialog_body"
        android:text="@string/error_dialog_pos_button_text"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        style="@style/DialogButtonStyle" />

</RelativeLayout>