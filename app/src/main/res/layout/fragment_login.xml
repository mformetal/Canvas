<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:minWidth="@dimen/parse_login_ui_width"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <milespeele.canvas.view.ViewTypefaceTextView
        android:id="@+id/parse_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:gravity="center_horizontal"
        android:textSize="@dimen/xlarge_text_size"
        android:layout_margin="@dimen/activity_vertical_margin" />

    <android.support.design.widget.TextInputLayout
        android:padding="@dimen/parse_login_ui_signup_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <milespeele.canvas.view.ViewTypefaceEditText
            android:id="@+id/fragment_login_username_input"
            android:gravity="center"
            android:layout_gravity="center"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/parse_login_username_hint"
            android:transitionName="email" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:padding="@dimen/parse_login_ui_signup_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <milespeele.canvas.view.ViewTypefaceEditText
            android:id="@+id/fragment_login_password_input"
            android:gravity="center"
            android:layout_gravity="center"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/parse_login_password_hint"
            android:transitionName="password" />

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:id="@+id/parse_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2" >

        <milespeele.canvas.view.ViewTypefaceButton
            android:id="@+id/fragment_login_parse_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/parse_login_login_label"
            android:layout_weight="1" />

        <milespeele.canvas.view.ViewTypefaceButton
            android:id="@+id/fragment_login_parse_signup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/parse_login_signup_label"
            android:layout_weight="1" />

    </LinearLayout>

    <milespeele.canvas.view.ViewTypefaceButton
        android:id="@+id/parse_login_help"
        android:text="@string/parse_login_forgot_password"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.facebook.login.widget.LoginButton
        android:layout_margin="@dimen/parse_login_ui_signup_margin"
        android:id="@+id/fragment_login_fb_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" />

    <com.twitter.sdk.android.core.identity.TwitterLoginButton
        android:layout_margin="@dimen/parse_login_ui_signup_margin"
        android:id="@+id/fragment_login_twitter_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" />

</LinearLayout>