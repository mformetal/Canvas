<?xml version="1.0" encoding="utf-8"?>
<milespeele.canvas.view.ViewColorPicker
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_color_picker_view" >

    <milespeele.canvas.view.ViewTypefaceButton
        android:id="@+id/fragment_color_picker_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:text="@string/fragment_color_picker_switch"
        android:textColor="@android:color/white"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        style="?android:attr/borderlessButtonStyle" />

    <milespeele.canvas.view.ViewTypefaceButton
        android:id="@+id/fragment_color_picker_pos_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:text="@string/fragment_color_picker_choose"
        android:textColor="@android:color/white"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        style="?android:attr/borderlessButtonStyle" />

    <milespeele.canvas.view.ViewTypefaceButton
        android:id="@+id/fragment_color_picker_neg_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:text="@string/fragment_color_picker_nah"
        android:textColor="@android:color/white"
        android:layout_marginEnd="80dp"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        style="?android:attr/borderlessButtonStyle" />

</milespeele.canvas.view.ViewColorPicker>